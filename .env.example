# =====================================
# Logging
# =====================================

# Global log level (applies to app + all MCP servers)
# SUM_IT_UP_LOG_LEVEL=INFO

# Persist logs to files (useful because MCP servers run in background subprocesses)
# SUM_IT_UP_LOG_TO_FILE=true

# Directory where log files are written (created if missing)
# SUM_IT_UP_LOG_DIR=logs

# Append to existing log files instead of overwriting
# SUM_IT_UP_LOG_APPEND=true

