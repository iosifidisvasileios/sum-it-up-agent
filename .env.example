# =====================================
# Logging
# =====================================
MCP_HOST_SUMMARIZER=127.0.0.1
MCP_PORT_SUMMARIZER=9000
MCP_PATH_SUMMARIZER=/summarizer
MCP_TRANSPORT_SUMMARIZER=http

MCP_HOST_AUDIO_PROCESSOR=127.0.0.1
MCP_PORT_AUDIO_PROCESSOR=9001
MCP_PATH_AUDIO_PROCESSOR=/audio_proc
MCP_TRANSPORT_AUDIO_PROCESSOR=http

MCP_HOST_TOPIC_CLASSIFIER=127.0.0.1
MCP_PORT_TOPIC_CLASSIFIER=9002
MCP_PATH_TOPIC_CLASSIFIER=/classifier
MCP_TRANSPORT_TOPIC_CLASSIFIER=http

MCP_HOST_COMMUNICATOR=127.0.0.1
MCP_PORT_COMMUNICATOR=9003
MCP_PATH_COMMUNICATOR=/communicate
MCP_TRANSPORT_COMMUNICATOR=http

SMTP_SERVER=smtp.gmail.com
SMTP_PORT=465

# =====================================
# Slack Configuration
# =====================================
# Slack webhook URL (required for Slack communication)
# Get this from https://api.slack.com/apps > Your App > Incoming Webhooks
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL/HERE

SUM_IT_UP_OUTPUT_DIR=/home/user/export_files/
# Global log level (applies to app + all MCP servers)
SUM_IT_UP_LOG_LEVEL=INFO
# Persist logs to files (useful because MCP servers run in background subprocesses)
SUM_IT_UP_LOG_TO_FILE=true
# Directory where log files are written (created if missing)
SUM_IT_UP_LOG_DIR=logs
# Append to existing log files instead of overwriting
SUM_IT_UP_LOG_APPEND=true

#you need to download the ollama model
SUM_IT_UP_LLM_MODEL=hf.co/lmstudio-community/EXAONE-3.5-2.4B-Instruct-GGUF:Q8_0
